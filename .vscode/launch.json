{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pulumi",
            "request": "launch",
            "name": "pulumi up",
            "command": "up",
            "workDir": "${workspaceFolder}/src",
            "env": {
                // "PIPELINE_CONFIG": "${workspaceFolder}/src/test/test_pipeline.yaml",
                "PULUMI_CONFIG_PASSPHRASE": "",
                "DISABLE_FILE_LOGGING": "true",
                "LOG_LEVEL": "INFO"
            }
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/pipeline_orchestrator/__main__.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/pipeline_orchestrator",
            "env": {
                "PIPELINE_CONFIG": "${workspaceFolder}/src/test/test_pipeline.yaml",
                "DISABLE_FILE_LOGGING": "true",
                "LOG_LEVEL": "INFO"
            }
        }
    ]
}